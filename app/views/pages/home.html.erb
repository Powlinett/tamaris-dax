<ul class='products-grid back-in-stock'>
  <% Product.where.not(photos_urls: []).order(updated_at: :asc).last(8).each do |product| %>
    <%= render partial: 'products/partials/product_card', locals: { product: product } %>
  <% end %>
</ul>
