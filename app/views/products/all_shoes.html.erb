<ul class="products-grid">
  <% @shoes.each do |shoe| %>
    <li>
      <a href="<%= product_path(shoe.reference)%>", class="product-card" >
        <% if !shoe.photos_urls.empty? %>
          <%= image_tag shoe.photos_urls[0..1].sample, width: '100%' %>
        <% else %>
            <%= image_tag 'camera.png', class: 'no-image' %>
        <% end %>
        <div class="card-infos">
          <p><%= shoe.model %></p>

        </div>
      </a>
    </li>
  <% end %>
</ul>
