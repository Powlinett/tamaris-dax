<ul class="thumbnails-pictures no-mobile">
  <% @product.photos_urls.each_with_index do |photo, index| %>
    <li class='thumbnail-picture'>
      <%= image_tag resize(photo, 72, 96), data: { index: index } %>
    </li>
  <% end %>
</ul>

<ul class="picture-wrapper no-mobile">
  <% @product.photos_urls.each_with_index do |photo, index| %>
    <li class="full-size-picture<%= " active" if index == 0 %>">
      <%= image_tag resize(photo, 680, 900), data: { index: index } %>
    </li>
  <% end %>
</ul>

<div id="carouselExampleIndicators" class="carousel slide only-mobile w-100" data-ride="false" data-interval="false">
  <div class="carousel-inner">
    <% @product.photos_urls.each_with_index do |photo, index| %>
      <div class="carousel-item <%= " active" if index == 0 %>">
        <%= image_tag resize(photo, 600, 800), data: { index: index }, class: 'd-block mx-auto w-100' %>
      </div>
    <% end %>
  </div>
  <ol class="carousel-indicators">
    <% @product.photos_urls.each_with_index do |photo, index| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= "active" if index == 0 %>"></li>
    <% end %>
  </ol>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
