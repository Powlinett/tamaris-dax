<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="content-width navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://tamaris.com/on/demandware.static/Sites-FR-Site/-/default/dw4739fad8/images/logo-tamaris.svg" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% unless user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Collection".upcase, root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Votre boutique".upcase, "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Nous trouver".upcase, "#", class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item<%= ' active' if body_class.include?('bookings-current_bookings') %>">
            <%= link_to "Réservations".upcase, current_bookings_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Déduire ventes".upcase, "#", class: "nav-link" %>
          </li>
          <li class="nav-item<%= ' active' if body_class.include?('products-new') %>">
            <%= link_to "Ajouter référence".upcase, new_product_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag 'avatar-admin.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <p class="avatar-email"><%= current_user.email %></p>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Historique".upcase, bookings_path , class: "dropdown-item" %>
              <%= link_to "Fichier client".upcase, bookers_path, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
