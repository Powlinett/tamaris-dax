<% @product = @products.first unless @products.empty? %>

<ul class="list-inline tabs-links">
  <li class="tab-link root-link">
    <%= link_to 'Tamaris', root_path %>
  </li>

  <% if !@products.empty? && @product.category == 'chaussures' %>
    <li class="tab-link category-link">
      <%= link_to "Chaussures", all_shoes_path  %>
    </li>
  <% elsif !@products.empty? && @product.category == 'accessoires' %>
    <li class="tab-link category-link">
      <%= link_to "Accessoires", all_accessories_path  %>
    </li>
  <% elsif !@products.empty? %>
    <li class="tab-link subcategory-link">
      <%= link_to "#{@product.sub_category.capitalize}", "#" %>
    </li>

    <li class="tab-link product-model">
      <%= "#{@product.model.capitalize}" %>
    </li>
  <% end %>
</ul>
